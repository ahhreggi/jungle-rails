<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
  </header>

  <div class="order-summary">
    <h2 class="lead">✔️  Thank you, your order has been placed.</h1>
    <h4>An email confirmation has been sent to you (<b><%= @order.email %></b>).</h4>
    <h4><b>Order Number: <%= @order.id %></b></h4>
  </div>

  <div class="panel panel-default items">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Product</th>
          <th>Unit Price</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>
        <% @order.line_items.each do |line_item| %>
          <%= render 'line_item', product: line_item.product, quantity: line_item.quantity %>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <th colspan="4">
            TOTAL:
          </th>
          <th>
            $<%= number_with_precision(@order.total_cents / 100, :precision => 2, :delimiter => ',') %>
          </th>
        </tr>
      </tfoot>
    </table>
  </div>


  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
